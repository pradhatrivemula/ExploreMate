<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/hmray"
    android:background="@drawable/back"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:visibility="visible"
        android:id="@+id/timelay"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:typeface="serif"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enter the time below and let us Plan Your Day!"
                android:id="@+id/textView3"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="From"
                android:id="@+id/textView4"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="To"
                android:id="@+id/textView5"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/fromray"
                android:layout_marginRight="2dp"
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TableRow
                    android:background="@android:color/white"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="35dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/fromtime"
                        android:layout_weight="3" />
                </TableRow>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/toray"
                android:layout_marginLeft="2dp"
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TableRow
                    android:background="@android:color/white"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="35dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/totime"
                        android:layout_weight="3" />
                </TableRow>
            </RelativeLayout>

        </TableRow>


        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t"
                    android:textColor="@android:color/background_dark"
                    android:text="Price Range : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/t"
                    android:id="@+id/pricespin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </RelativeLayout>



        </TableRow>

        <TableRow
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:id="@+id/sub"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:visibility="gone"
        android:id="@+id/advenure"
        android:layout_below="@+id/timelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:typeface="serif"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Would to Wish to Visit an Adventure Park?"
                android:id="@+id/textView6"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/rgadventure"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Park"
                    android:id="@+id/waterpark" />

                <RadioButton
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amusement Park"
                    android:id="@+id/amusepark" />

                <RadioButton
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/advnone" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:id="@+id/advsubmit"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</RelativeLayout>